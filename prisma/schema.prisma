generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Group {
  id            Int        @default(autoincrement()) @id
  name          String
  ownerId       String
  createdAt     DateTime   @default(dbgenerated())
  description   String
  inviteToken   String?
  isModerated   Boolean
  wallpapersUrl String?
  homework      Hometask[]
  members       Member[]
}

model Member {
  groupId                 Int
  userId                  String
  isModerator             Boolean @default(false)
  trackHometaskCompletion Boolean
  shareHometaskCompletion Boolean
  dedicatedGroup          Group   @relation(fields: [groupId], references: [id])

  @@id([groupId, userId])
}

model Hometask {
  id             Int       @default(autoincrement()) @id
  groupId        Int
  createdBy      DateTime  @default(now())
  updatedAt      DateTime? @updatedAt
  subject        String
  text           String
  dedicatedGroup Group     @relation(fields: [groupId], references: [id])
  attachedFiles  File[]
}

model File {
  fileId            Int      @default(autoincrement()) @id
  hometaskId        Int
  fileLink          String
  addedBy           String?
  dedicatedHometask Hometask @relation(fields: [hometaskId], references: [id])
}
